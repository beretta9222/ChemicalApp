<Application x:Class="ChemicalApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChemicalApp"
             xmlns:helpers="clr-namespace:ChemicalApp.Helpers"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>


        <helpers:BackgroundConverter x:Key="BackgroundConverter"/>
        <helpers:ForegroundConverter x:Key="ForegroundConverter"/>
        <!--#region  TextBlock-->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground">
                <Setter.Value>
                    <MultiBinding Mode="OneWay" Converter="{StaticResource ForegroundConverter}">
                        <Binding Path="Min"/>
                        <Binding Path="Max"/>
                        <Binding Path="Predicted"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <!--#endregion-->
        <!--#region  Validation-->
        <ControlTemplate x:Key="validationFailed">
            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="Red" BorderThickness="2">
                    <AdornedElementPlaceholder />
                </Border>
                <TextBlock Foreground="Red" FontSize="22" FontWeight="Bold">!</TextBlock>
            </StackPanel>
        </ControlTemplate>
        <!--#endregion-->
        <!--#region  Button-->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                            CornerRadius="15" 
                            MinHeight="50" 
                            Background="#AAAAAA"
                            >
                            <Grid>

                                <TextBlock 
                                Foreground="White"
                                Text="{TemplateBinding Content}" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--#endregion-->
        <!--#region  ListBox-->
        <Style TargetType="ListBox" x:Key="main">
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="2"/>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger 
            Binding="{Binding RelativeSource={x:Static RelativeSource.Self}, Path=Elements.Count}" 
            Value="0"
            >
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate>
                                <TextBlock>No items to display</TextBlock>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border 
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="15"
                                Height="250"
                                Width="400"
                               >
                            <Border.Background>
                                <MultiBinding Mode="OneWay" Converter="{StaticResource BackgroundConverter}">
                                    <Binding Path="Min"/>
                                    <Binding Path="Max"/>
                                    <Binding Path="Predicted"/>
                                </MultiBinding>
                            </Border.Background>
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <!--Name element-->
                                <TextBlock 
                                    Text="{Binding Name}" 
                                    FontSize="80"
                                    Margin="15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.RowSpan="2"
                                    Grid.Row="1"
                                    Grid.Column="2"/>
                                <!--Element value -->

                                <TextBlock 
                                    Text="{Binding Value, StringFormat=Знач.: {0:0.###}}"
                                    FontSize="40"
                                    Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Grid.ColumnSpan="2"
                                    />
                                <!-- Минимальное и максимальное значение-->
                                <Border 
                                    Background="#55DDDDDD"                                    
                                    Grid.ColumnSpan="3"
                                    CornerRadius="15">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  
                                    Text="{Binding Min, StringFormat=Мин.: {0:0.##}}"
                                    FontSize="25"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.Column="0"/>
                                        <TextBlock 
                                    Text="{Binding Max, StringFormat=Макс.: {0:0.##}}"
                                    FontSize="25"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.Column="1"/>
                                    </Grid>
                                </Border>
                                <TextBlock 
                                    Text="{Binding Predicted, StringFormat=Прогноз.: {0:0.##}}"
                                    FontSize="25"                                    
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.ColumnSpan="2"
                                    Grid.Row="2"/>
                            </Grid>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--#endregion-->


        <!--#endregion-->
    </Application.Resources>
</Application>
